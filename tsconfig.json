{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "strict": true,
  // "strictNullChecks": true,
  // "strictFunctionTypes": true,
  // "strictPropertyInitialization" : true,
  // "noImplicitAny": true, 
  "include": ["src", "tests"],
  "exclude": []
}