{
  "name": "advanced-node",
  "version": "1.0.0",
  "description": "Estudo avan√ßado sobre a linguagem Typescript",
  "main": "index.ts",
  "scripts": {
    "start": " node dist/main/index.js",
    "dev:server": "ts-node-dev --respawn --transpile-only -r dotenv/config --inspect=0.0.0.0:9229 src/main",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:staged": "npm test -- --findRelatedTests",
    "test:fb-api": "npm test -- -c ./jest.integration.config.js tests/external/facebook-api.test.ts",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Samuel Marcos Neto Barbosa",
  "license": "ISC",
  "devDependencies": {
    "@jest-mock/express": "^2.0.2",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.9.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "dotenv": "^16.4.1",
    "eslint": "^8.54.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^15.1.0",
    "module-alias": "^2.2.3",
    "pg-mem": "^2.7.4",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "0.2.29"
  },
  "engines": {
    "node": "16.x"
  }
}
